<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- CUSTOM -->
    <!-- Custom EditText -->
    <style name="custom_edittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/custom_field_input_text</item>
        <item name="android:padding">4dp</item>
        <item name="android:inputType">text</item>
    </style>
    <!-- Custom Textview -->
    <style name="custom_textview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">2dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!-- Custom Button -->
    <style name="custom_button_green">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/custom_widgets_button_green</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="custom_button_edittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">34dp</item>
        <item name="android:background">@drawable/custom_field_input_popup</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">start</item>
        <item name="android:padding">5dp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <!-- Custom Spinner -->
    <style name="custom_spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/custom_widgets_spinner</item>
        <item name="android:padding">4dp</item>
        <item name="android:spinnerMode">dialog</item>
    </style>
    <!-- Custom Checkbox -->
    <style name="custom_checkbox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>
