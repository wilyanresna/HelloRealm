<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <solid android:color="@color/backgroundEditTextFocused" />
            <stroke android:width="2px" android:color="#CCCCCC" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <solid android:color="@color/backgroundEditTextDisabled" />
            <stroke android:width="2px" android:color="#CCCCCC" />
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <solid android:color="@color/backgroundEditTextNormal" />
            <stroke android:width="2px" android:color="#CCCCCC" />
        </shape>
    </item>

    <item android:right="10dp">
        <bitmap
            android:gravity="right"
            android:src="@drawable/ic_arrow_spinner" />
    </item>
</layer-list>